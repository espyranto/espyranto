#         print()
#     else:
#         print(f'{d} does not appear to be a plate')


# Org report - generate an org summary for a directory
if args.org:
    from pycse.orgmode import print_redirect

    for d in args.dir:
        print(d)
        p = Plate(d)
        with print_redirect(os.path.join(p.base, p.directory, "report.org")):
            p.org

